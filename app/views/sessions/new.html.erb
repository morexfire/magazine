<article id="login" class="h-card">
  <h1>Admin Login</h1>
  <%= form_tag sessions_path do %>
    <%= label_tag          :email %>
    <%= email_field_tag    :email, params[:email], placeholder: "Email" %>

    <%= label_tag          :password %>
    <%= password_field_tag :password %>

    <%= link_to "Cancel", root_url, class: "cancel" %>
    <%= button_tag "Login" %>
  <% end %>
</article>
