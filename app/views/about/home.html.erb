<div class="h-feed">

  <%= render "/articles/tile", article: @articles.first %>

  <% @articles[1..-1].in_groups_of(2).each do |row| %>
    <div class="row">
      <% row.each do |article| %>
        <%= render "/articles/tile", article: article %>
      <% end %>
    </div>
  <% end %>

</div>

<%= render "/contributors/contributors" %>
