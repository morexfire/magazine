<article class="h-entry" style="background-image: url(<%= article.photo %>)">
  <div class="p-name">
    <h1 class="p-x-title"><%= link_to article.title, article.path %></h1>
    <h2 class="p-x-subtitle"><%= link_to article.subtitle, article.path %></h2>
  </div>

  <%= render "/articles/published_on", article: article %>

  <% unless controller_name == "contributors" %>
    <table class="contributors">
      <tr>
        <th>Words by</em></th>
        <td class="p-author">
          <%= @contributors.shuffle.first.name %>
        </td>
      </tr>
      <tr>
        <th>Photos by</th>
        <td class="p-author p-photographer">
          <%= @contributors.shuffle.first.name %>
        </td>
      </tr>
      <tr>
        <th>Illustrations by</th>
        <td class="p-author p-illustrator">
          <%= @contributors.shuffle.first.name %>
        </td>
      </tr>
    </table>
  <% end %>

</article>
